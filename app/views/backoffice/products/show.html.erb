<div class="main-content">
    <div class="main-content-inner">
        <div class="breadcrumbs ace-save-state" id="breadcrumbs">
            <ul class="breadcrumb">
                <li>
                    <i class="ace-icon fa fa-home home-icon"></i>
                    <a href="/backoffice">Home</a>
                </li>
                <li class="active">Produtos</li>
            </ul>
            <!-- /.breadcrumb -->
        </div>

        <div class="page-content">
            <div class="page-header">
                <h1> Produtos
                    <small>
                        <i class="ace-icon fa fa-angle-double-right"></i> Visualizando
                    </small>
                </h1>
            </div>
            <!-- /.page-header -->

            <div class="row">
              <div class="col-xs-6">
                  <br>
                  		<div class="profile-user-info profile-user-info-striped">
												<div class="profile-info-row">
													<div class="profile-info-name"> ID </div>

													<div class="profile-info-value">
														<span class="editable" id="username"><%= @product.id %></span>
													</div>
												</div>
												<div class="profile-info-row">
													<div class="profile-info-name"> Usuario </div>

													<div class="profile-info-value">
														<span class="editable" id="username"><%= @product.user.name %></span>
													</div>
												</div>

												<div class="profile-info-row">
													<div class="profile-info-name"> Name </div>

													<div class="profile-info-value">
														<span class="editable" id="country"><%= @product.name %></span>
													</div>
												</div>

												<div class="profile-info-row">
													<div class="profile-info-name"> Descrição </div>

													<div class="profile-info-value">
														<span class="editable" id="age"><%= @product.description %></span>
													</div>
												</div>

												<div class="profile-info-row">
													<div class="profile-info-name"> Preço: </div>

													<div class="profile-info-value">
														<span class="editable" id="signup"><%= @product.price %></span>
													</div>
												</div>

												<div class="profile-info-row">
													<div class="profile-info-name"> Status </div>

													<div class="profile-info-value">
														<span class="editable" id="login"><%= @product.status %></span>
													</div>
												</div>


											</div>

                  <br>

                  <p id="notice"><%= notice %></p>
              </div>
            </div>

              <div class="row">
                <button class="btn btn-danger" type="button" onclick="location.href='/backoffice/products'">
                    <i class="ace-icon fa fa-undo bigger-110"></i>
                    Voltar
                </button>
              </div>

        </div>

    </div>
</div>
