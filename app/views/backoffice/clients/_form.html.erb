 
    <% if client.errors.any? %>
    <div class="alert alert-danger alert-dismissable">
      <button type="button" class="close" data-dismiss="alert" aria-hidden="true" >x</button>
      <ul>
      <% client.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  
  <div class="col-xs-6">
    <div class="widget-box">
      <div class="widget-header">
        <h4 class="widget-title"></h4>
      </div>

      <div class="widget-body">
        <div class="widget-main no-padding">
          <%= form_for([:backoffice, client]) do |f| %>
            <!-- <legend>Form</legend> -->
            <fieldset class="col-xs-12">

              
                <label class="col-xs-12" >Nome</label>
                <%= f.text_field :name %>

                <br>
                <br>

                <label class="col-xs-12">CPF</label>
                <%= f.text_field :cpf %>

                <br>
                <br>
              
                <label class="col-xs-12"> Telefone </label>
                <%= f.phone_field :phone %>

              
                <br>
                <br>

                <label class="col-xs-12"> Sexo </label>
                <%= f.select :sex, ['Masculino', 'Feminino'] %>


                <br>
                <br>

                <label class="col-xs-12">Data Nascimento</label>
                <%= f.text_field :birth %>

                <br>
                <br>

                <label class="col-xs-12"> Email</label>
                <%= f.text_field :email %>

              

            </fieldset>

            <div class="form-actions center">
              <button class="btn btn-danger" type="button" onclick="location.href='/backoffice/clients'">
                  <i class="ace-icon fa fa-undo bigger-110"></i> Cancelar
              </button>
              <input type="submit" name="commit" value="Confirmar" class="btn btn-info">
            </div>



          <% end %>
        </div>
      </div>
    </div>
  </div>
